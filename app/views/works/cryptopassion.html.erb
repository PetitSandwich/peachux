<!-- WORK HEADER -->

<div class="container">

  <%= render "shared/back-button" %>

  <div class="work-header d-flex">
    <div class="row align-self-stretch">
      <div class="col-md-7 col-sm-12 offset-md-0">
        <img src="https://res.cloudinary.com/peachux/image/upload/v1669124787/website/CP_cover.jpg" alt="LCL cover" class="work-header-image">
      </div>
      <div class="col-md-5 col-sm-12 work-header-content d-flex align-content-end flex-wrap offset-md-0 ps-4" >
        <h1 class="heading-02">Crypto<br>Passion</h1>
        <p class="ui-regular-01"><%= t "pages.cryptopassion.description" %></p>
      </div>
    </div>
  </div>

<!-- Tasks -->

  <div class="work-block">
    <div class="row justify-content-center">
      <div class="col-md-4 col-sm-12">
        <h2 class="sub-heading-03 mb-3"><%= t "pages.cryptopassion.goals-title" %></h2>
        <p class="ui-regular-01"><%= t "pages.cryptopassion.goals-description" %></p>
      </div>
      <div class="col-md-4 col-sm-12">
        <img src="https://res.cloudinary.com/peachux/image/upload/v1669124789/website/CP_goals.jpg" alt="CryptoPassion goals" class="works-img">
        <p class="ui-regular-03 caption pt-2"><%= t "pages.cryptopassion.goals-img-caption" %></p>
      </div>
    </div>
  </div>

<!-- Quantitative studies -->

  <div class="work-block">
    <div class="row justify-content-center">
      <div class="col-md-4 col-sm-12">
        <img src="https://res.cloudinary.com/peachux/image/upload/v1669124787/website/CP_quantitative.png" alt="CryptoPassion quanti" class="works-img">
        <p class="ui-regular-03 caption pt-2"><%= t "pages.cryptopassion.quantitative-img-caption" %></p>
      </div>
      <div class="col-md-4 col-sm-12">
        <h2 class="sub-heading-03 mb-3"><%= t "pages.cryptopassion.quantitative-title" %></h2>
        <p class="ui-regular-01"><%= t "pages.cryptopassion.quantitative-description" %></p>
      </div>
    </div>
  </div>
</div>

<!-- Qualitative studies -->

<div class="container">
  <div class="work-block">
    <div class="row justify-content-center">
      <div class="col-md-4 col-sm-12">
        <h2 class="sub-heading-03 mb-3"><%= t "pages.cryptopassion.qualitative-title" %></h2>
        <p class="ui-regular-01"><%= t "pages.cryptopassion.qualitative-description" %></p>
      </div>
      <div class="col-md-4 col-sm-12">
        <img src="https://res.cloudinary.com/peachux/image/upload/v1669124788/website/CP_qualitative.jpg" alt="CryptoPassion quali" class="works-img">
        <p class="ui-regular-03 caption pt-2"><%= t "pages.cryptopassion.qualitative-img-caption" %></p>
      </div>
    </div>
  </div>

<!-- Storytelling -->

  <div class="work-block">
    <div class="row justify-content-center">
      <div class="col-md-4 col-sm-12">
        <img src="https://res.cloudinary.com/peachux/image/upload/v1669124787/website/CP_logo.png" alt="Kraze info archi 1" class="works-img">
        <p class="ui-regular-03 caption pt-2"><%= t "pages.cryptopassion.storytelling-img-caption1" %></p>
        <img src="https://res.cloudinary.com/peachux/image/upload/v1669124787/website/CP_logo_explanation.png" alt="CryptoPassion logo explanation" class="works-img">
        <p class="ui-regular-03 caption pt-2"><%= t "pages.cryptopassion.storytelling-img-caption2" %></p>
      </div>
      <div class="col-md-4 col-sm-12">
        <h2 class="sub-heading-03 mb-3"><%= t "pages.cryptopassion.storytelling-title" %></h2>
        <p class="ui-regular-01"><%= t "pages.cryptopassion.storytelling-description" %></p>
      </div>
    </div>
  </div>
</div>

<!-- Next project -->

<div class="next-work">
  <div class="container">
    <div class="d-md-flex justify-content-between mb-4">
      <h2 class="sub-heading-02 mb-3"><%= t "pages.works.next-work" %></h2>
      <%= link_to t("pages.works.see-all-works"), works_path , class: "button-primary button-advantage button-next" %>
    </div>

    <a href="<%= accor_path %>" style="text-decoration: none">
      <div class="next-work-section" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url(https://res.cloudinary.com/peachux/image/upload/v1669718549/website/Accor_next.png);">
        Accor
      </div>
    </a>
  </div>
</div>

<%= render "shared/advantages-block" %>
