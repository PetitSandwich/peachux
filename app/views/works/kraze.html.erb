
<!-- WORK HEADER -->

<div class="container">

  <%= render "shared/back-button" %>

  <div class="work-header d-flex">
    <div class="row align-self-stretch">
      <div class="col-md-7 col-sm-12 offset-md-0">
        <img src="https://res.cloudinary.com/peachux/image/upload/v1669124771/website/Kraze_cover.jpg" alt="Kraze cover" class="work-header-image">
      </div>
      <div class="col-md-5 col-sm-12 work-header-content d-flex align-content-end flex-wrap offset-md-0 ps-4" >
        <h1 class="heading-02">Kraze</h1>
        <p class="ui-regular-01"><%= t "pages.kraze.description" %></p>
      </div>
    </div>
  </div>

<!-- GOALS -->

  <div class="work-block">
    <div class="row justify-content-center">
      <div class="col-md-4 col-sm-12">
        <h2 class="sub-heading-03 mb-3"><%= t "pages.kraze.goals-title" %></h2>
        <p class="ui-regular-01"><%= t "pages.kraze.goals-description_html" %></p>
      </div>
      <div class="col-md-4 col-sm-12">
        <img src="https://res.cloudinary.com/peachux/image/upload/v1669124770/website/Kraze_goals.jpg" alt="Kraze goals" class="works-img">
        <p class="ui-regular-03 caption pt-2"><%= t "pages.kraze.goals-img-caption" %></p>
      </div>
    </div>
  </div>

<!-- INFORMATION ARCHITECTURE -->

  <div class="work-block">
    <div class="row justify-content-center">
      <div class="col-md-4 col-sm-12">
        <img src="https://res.cloudinary.com/peachux/image/upload/v1669124770/website/Kraze_workshop.png" alt="Kraze info archi 1" class="works-img">
        <p class="ui-regular-03 caption pt-2"><%= t "pages.kraze.architecture-img-caption1" %></p>
        <img src="https://res.cloudinary.com/peachux/image/upload/v1669124769/website/Kraze_architecture.png" alt="Kraze info archi 2" class="works-img">
        <p class="ui-regular-03 caption pt-2"><%= t "pages.kraze.architecture-img-caption2" %></p>
      </div>
      <div class="col-md-4 col-sm-12">
        <h2 class="sub-heading-03 mb-3"><%= t "pages.kraze.architecture-title" %></h2>
        <p class="ui-regular-01"><%= t "pages.kraze.architecture-description" %></p>
      </div>
    </div>
  </div>
</div>

<!-- FOCUS -->

<div class="focus">
  <div class="container">
    <h2 class="sub-heading-03 text-center my-4"><%= t "pages.kraze.focus-title" %></h2>
    <div class="row justify-content-center">
      <div class="col-md-4 col-sm-12">
        <img src="https://res.cloudinary.com/peachux/image/upload/v1669124770/website/Kraze_home.png" alt="Kraze home" class="kraze-screen">
        <p class="ui-regular-01 mt-3" style="color: white"><%= t "pages.kraze.focus-home" %></p>
      </div>
      <div class="col-md-4 col-sm-12">
        <img src="https://res.cloudinary.com/peachux/image/upload/v1669124769/website/Kraze_feed.png" alt="Kraze post" class="kraze-screen">
        <p class="ui-regular-01 mt-3" style="color: white"><%= t "pages.kraze.focus-post" %></p>
      </div>
      <div class="col-md-4 col-sm-12">
        <img src="https://res.cloudinary.com/peachux/image/upload/v1669124770/website/Kraze_event.png" alt="Kraze event" class="kraze-screen">
        <p class="ui-regular-01 mt-3" style="color: white"><%= t "pages.kraze.focus-event" %></p>
      </div>
    </div>
  </div>
</div>

<!-- Design system and library -->

<div class="container">
  <div class="work-block">
    <div class="row justify-content-center">
      <div class="col-md-4 col-sm-12">
        <h2 class="sub-heading-03 mb-3"><%= t "pages.kraze.ds-title" %></h2>
        <p class="ui-regular-01"><%= t "pages.kraze.ds-description" %></p>
      </div>
      <div class="col-md-4 col-sm-12">
        <img src="https://res.cloudinary.com/peachux/image/upload/v1669124770/website/Kraze_library.png" alt="Kraze DS" class="works-img">
        <p class="ui-regular-03 caption pt-2"><%= t "pages.kraze.ds-img-caption" %></p>
      </div>
    </div>
  </div>

<!-- Design system and library -->

  <div class="work-block">
    <div class="row justify-content-center">
      <div class="col-md-4 col-sm-12">
        <img src="https://res.cloudinary.com/peachux/image/upload/v1669717429/website/Kraze_prototyping.png" alt="Kraze prototype" class="works-img">
        <p class="ui-regular-03 caption pt-2"><%= t "pages.kraze.proto-img-caption" %></p>
      </div>
      <div class="col-md-4 col-sm-12">
        <h2 class="sub-heading-03 mb-3"><%= t "pages.kraze.proto-title" %></h2>
        <p class="ui-regular-01"><%= t "pages.kraze.proto-description" %></p>
      </div>
    </div>
  </div>
</div>

<!-- Next project -->

<div class="next-work">
  <div class="container">
    <div class="d-md-flex justify-content-between mb-4">
      <h2 class="sub-heading-02 mb-3"><%= t "pages.works.next-work" %></h2>
      <%= link_to t("pages.works.see-all-works"), works_path , class: "button-primary button-advantage button-next" %>
    </div>

    <a href="<%= lcl_path %>" style="text-decoration: none">
      <div class="next-work-section" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url(https://res.cloudinary.com/peachux/image/upload/v1669718527/website/Lcl_next.png);">
        LCL
      </div>
    </a>
  </div>
</div>

<%= render "shared/advantages-block" %>
